#include<stdio.h>
#include<math.h>
int main()
{
	int a,b,n;
	printf("\t\t\t\t\tWelcome to the Arthimetic Calculator!\n\n");
	printf("1) Addition\n2) Subtraction\n3) Multiplication\n4) Division\n");
	printf("Enter your option(1-4):");
	scanf("%d",&n);
	printf("Enter your first number:");
	scanf("%d",&a);
	printf("Enter your second number number:");
	scanf("%d",&b);
	switch(n)
	{
		case 1:
		    
		    printf("%d+%d=%d", a,b,a+b);
		    break;
		case 2:
			printf("%d-%d=%d", a,b,a-b);
			break;
		case 3:
			printf("%d*%d=%d", a,b,a*b);
			break;
		case 4:
			printf("%d/%d=%d", a,b,a/b);
			break;
		default:
			printf("Invalid Option!!");
		    break;
	}
	return 0;	
}
